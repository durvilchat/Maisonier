<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="513dp"
        android:layout_marginBottom="20dp"
        android:columnCount="2"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_half"
            android:layout_marginTop="@dimen/activity_margin_half"
            android:paddingLeft="@dimen/activity_margin_half">

            <LinearLayout
            android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_margin_half"
                android:paddingLeft="@dimen/activity_margin_half"
                android:paddingTop="@dimen/activity_margin_half">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habitant"
                android:textColor="@color/black"
                android:textSize="7pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Habitant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habitant"
                android:textColor="@color/black"
                android:textSize="7pt" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_half"
            android:layout_marginTop="@dimen/activity_margin_half"
            android:paddingLeft="@dimen/activity_margin_half">

            <LinearLayout
            android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_margin_half"
                android:paddingLeft="@dimen/activity_margin_half"
                android:paddingTop="@dimen/activity_margin_half">


                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Occupation"
                android:textColor="@color/black"
                android:textSize="7pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Occupation"
                android:textColor="@color/black"
                android:textSize="7pt" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_half"
            android:layout_marginTop="@dimen/activity_margin_half"
            android:paddingLeft="@dimen/activity_margin_half">

            <LinearLayout
            android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_margin_half"
                android:paddingLeft="@dimen/activity_margin_half"
                android:paddingTop="@dimen/activity_margin_half">


                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mois"
                android:textColor="@color/black"
                android:textSize="7pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Mois"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mois"
                android:textColor="@color/black"
                android:textSize="7pt" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_half"
            android:layout_marginTop="@dimen/activity_margin_half"
            android:paddingLeft="@dimen/activity_margin_half">

            <LinearLayout
            android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_margin_half"
                android:paddingLeft="@dimen/activity_margin_half"
                android:paddingTop="@dimen/activity_margin_half">


                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Montant"
                android:textColor="@color/black"
                android:textSize="7pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Montant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Montant"
                android:textColor="@color/black"
                android:textSize="7pt" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_half"
            android:layout_marginTop="@dimen/activity_margin_half"
            android:paddingLeft="@dimen/activity_margin_half">

            <LinearLayout
            android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_margin_half"
                android:paddingLeft="@dimen/activity_margin_half"
                android:paddingTop="@dimen/activity_margin_half">


                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date de Dépot"
                android:textColor="@color/black"
                android:textSize="7pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DateDepot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date de Dépot"
                android:textColor="@color/black"
                android:textSize="7pt" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_half"
            android:layout_marginTop="@dimen/activity_margin_half"
            android:paddingLeft="@dimen/activity_margin_half">

            <LinearLayout
            android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_margin_half"
                android:paddingLeft="@dimen/activity_margin_half"
                android:paddingTop="@dimen/activity_margin_half">


                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observations"
                    android:textSize="7pt"
                    android:textStyle="bold" />

            <TextView
                android:id="@+id/Observations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observations"

                android:textSize="7pt" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <include
            layout="@layout/btn_fermer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
