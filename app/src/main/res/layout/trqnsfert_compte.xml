<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:columnCount="2"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <Spinner
                android:id="@+id/habitant"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <ImageView
                android:id="@+id/imgBailleur"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:srcCompat="@drawable/avatar" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin_half"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:paddingLeft="@dimen/activity_margin_half">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/activity_margin_half"
                    android:paddingLeft="@dimen/activity_margin_half"
                    android:paddingTop="@dimen/activity_margin_half">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nom"
                        android:textSize="6pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Nom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nom" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin_half"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:paddingLeft="@dimen/activity_margin_half">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/activity_margin_half"
                    android:paddingLeft="@dimen/activity_margin_half"
                    android:paddingTop="@dimen/activity_margin_half">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PrÃ©nom"
                        android:textSize="6pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Prenom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="prenom" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin_half"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:paddingLeft="@dimen/activity_margin_half">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/activity_margin_half"
                    android:paddingLeft="@dimen/activity_margin_half"
                    android:paddingTop="@dimen/activity_margin_half">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Titre"
                        android:textSize="6pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Titre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Titre" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:columnCount="2"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:weightSum="1">


            <Spinner
                android:id="@+id/logement"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <Spinner
                android:id="@+id/comptesource"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <Spinner
                android:id="@+id/comptedest"
                android:layout_width="match_parent"
                android:layout_height="48dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mode de paiment" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/montant"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.48"
                    android:ems="10"
                    android:hint="Montant *"
                    android:inputType="numberDecimal" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <include
            layout="@layout/btn_valider_annuler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</ScrollView>
