            android:layout_marginBottom="@dimen/activity_margin_half"
            android:layout_marginTop="@dimen/activity_margin_half"
            android:paddingLeft="@dimen/activity_margin_half">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_margin_half"
                android:paddingLeft="@dimen/activity_margin_half"
                android:paddingTop="@dimen/activity_margin_half">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date d'entreé"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/DateEntree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date d'entreé" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_half"
            android:layout_marginTop="@dimen/activity_margin_half"
            android:paddingLeft="@dimen/activity_margin_half">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_margin_half"
                android:paddingLeft="@dimen/activity_margin_half"
                android:paddingTop="@dimen/activity_margin_half">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date de sortie"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/DateSortie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date de sortie" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_half"
            android:layout_marginTop="@dimen/activity_margin_half"
            android:paddingLeft="@dimen/activity_margin_half">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_margin_half"
                android:paddingLeft="@dimen/activity_margin_half"
                android:paddingTop="@dimen/activity_margin_half">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>
