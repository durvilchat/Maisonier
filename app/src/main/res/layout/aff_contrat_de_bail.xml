<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="513dp"
        android:layout_marginBottom="20dp"
        android:columnCount="2"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin_half"
        android:layout_marginTop="@dimen/activity_margin_half"
        android:paddingLeft="@dimen/activity_margin_half">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_margin_half"
            android:paddingLeft="@dimen/activity_margin_half"
            android:paddingTop="@dimen/activity_margin_half">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date d'établissement"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DateEtablissement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date d'établissement" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin_half"
        android:layout_marginTop="@dimen/activity_margin_half"
        android:paddingLeft="@dimen/activity_margin_half">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_margin_half"
            android:paddingLeft="@dimen/activity_margin_half"
            android:paddingTop="@dimen/activity_margin_half">



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bailleur"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Bailleur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bailleur" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin_half"
        android:layout_marginTop="@dimen/activity_margin_half"
        android:paddingLeft="@dimen/activity_margin_half">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_margin_half"
            android:paddingLeft="@dimen/activity_margin_half"
            android:paddingTop="@dimen/activity_margin_half">



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habitant"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Habitant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habitant" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin_half"
        android:layout_marginTop="@dimen/activity_margin_half"
        android:paddingLeft="@dimen/activity_margin_half">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_margin_half"
            android:paddingLeft="@dimen/activity_margin_half"
            android:paddingTop="@dimen/activity_margin_half">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logement"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Logement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logement" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin_half"
        android:layout_marginTop="@dimen/activity_margin_half"
        android:paddingLeft="@dimen/activity_margin_half">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_margin_half"
            android:paddingLeft="@dimen/activity_margin_half"
            android:paddingTop="@dimen/activity_margin_half">



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observations"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Observations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observations" />


        </LinearLayout>


    </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
