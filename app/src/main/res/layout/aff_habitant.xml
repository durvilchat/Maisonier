<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="513dp"
            android:layout_marginBottom="20dp"
            android:columnCount="2"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="67dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/usuario" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prénom"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Prenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prénom" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numéro de CNI"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NumeroCNI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numéro de CNI" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Titre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emails"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Emails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emails" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Téléphone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Télephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Téléphone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date de Naissance"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DateNaissance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date de Naissance" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lieu de Naissance"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/LieuNaissance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lieu de Naissance" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom du Père"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NomPere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom du Père" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom de la Mère"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NomMère"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom de la Mère" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profession"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Profession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profession" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
</ScrollView>
